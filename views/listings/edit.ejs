<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
    <div class="mb-3">
    <label for="title">Title</label>
    <input id="title" name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"/>
    </div>
    <br /><br />

    <div class="mb-3">
    <label for="description">Description</label>
    <textarea id="description" name="listing[description]" class="form-control"><%= listing.description %></textarea>
    </div>
    <br /><br />

    <div class="mb-3">
    <label for="image">Image URL</label>
    <input id="image" name="listing[image]" value="<%= listing.image.url%>" type="text" class="form-control"/>
    <br /><br />
    </div>

    <div class="row">
    <div class="mb-3 col-md-4">
    <label for="price">Price</label>
    <input id="price" name="listing[price]" value="<%= listing.price %>" type="number" class="form-control"/>
    <br /><br />
    </div> 
    
    <div class="mb-3 col-md-8">
    <label for="country">Country</label>
    <input id="country" name="listing[country]" value="<%= listing.country %>" type="text" class="form-control"/>
    <br /><br />
    </div>
</div>

    <div class="mb-3">
    <label for="location">Location</label>
    <input id="location" name="listing[location]" value="<%= listing.location %>" type="text" class="form-control"/>
    <br /><br />
    </div> 

    <button class="btn btn-dark edit-btn mt-3">Edit</button>
</form>
</div>
</div>


